#!/usr/bin/env ruby

require "bundler/setup"
require "blog/sniffer"
require 'reality'
require "pry"

Blog::Page.create_hypertable_if_not_exists!

def entity(name)
  Reality::Entity.new(name).tap(&:load!)
end

def show(entity)
  entity(entity)&.describe
end

def infobox(entity)
  entity(entity)&.wikipage&.infobox&.to_h
end

Pry.start
